---
const { frontmatter } = Astro.props;
import BaseLayout from "./BaseLayout.astro";
---

<BaseLayout pageTitle={frontmatter.title}>
  <p><em style="font-size: smaller;">{frontmatter.description}</em></p>
  <p>Written by <strong>{frontmatter.author}</strong></p>
  <p>Published on: {frontmatter.pubDate.slice(0, 10)}</p>
  <!-- Create a small-ish header image. -->
  <div style="witdth:100%; height: 200px; overflow: hidden; ">
    <img
      src={frontmatter.image.url}
      alt={frontmatter.image.alt}
      style="width: 100%; display: block; justify-content: center; align-items: center;"
    />
  </div>
  <slot />
</BaseLayout>
<style>
  a {
    color: #00539f;
  }
</style>
